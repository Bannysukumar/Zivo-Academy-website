// Firestore Security Rules for ZIVO Academy
// Deploy: firebase deploy --only firestore:rules (requires firebase.json from firebase init firestore)
// Or copy the assignmentSubmissions block into Firebase Console > Firestore > Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: any authenticated can read (admin list); only own doc can be written
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Public catalog (read for all, write via admin only)
    match /categories/{id} { allow read: if true; allow write: if false; }
    match /courses/{id} { allow read: if true; allow write: if false; }
    match /sections/{id} { allow read: if true; allow write: if false; }
    match /reviews/{id} { allow read: if true; allow write: if false; }
    match /testimonials/{id} { allow read: if true; allow write: if false; }

    // Enrollments: authenticated read (admin + own); create when authenticated
    match /enrollments/{id} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Assignments: authenticated users can read (app queries by instructorId server-side); write only via API
    match /assignments/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Assignment submissions: instructor can read/update their own (instructorId == uid)
    match /assignmentSubmissions/{subId} {
      allow read: if request.auth != null && resource.data.instructorId == request.auth.uid;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.instructorId == request.auth.uid;
    }

    // Live sessions, payments, coupons, certificates, support, referrals, audit, notifications
    // Adjust as needed; below allows authenticated read for own data or admin-only
    match /liveSessions/{id} { allow read: if true; allow write: if false; }
    match /payments/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /coupons/{id} { allow read: if true; allow write: if false; }
    match /certificates/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /certificateTemplates/{id} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    match /supportTickets/{id} {
      allow read, create: if request.auth != null && (
        resource.data.userId == request.auth.uid
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin']
      );
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin']
      );
    }
    match /referralEarnings/{id} {
      allow read: if request.auth != null && (
        resource.data.referrerId == request.auth.uid
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin']
      );
      allow write: if false;
    }
    match /referralWallets/{id} { allow read, write: if request.auth != null; }
    match /referralWithdrawals/{id} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    match /auditLogs/{id} { allow read: if request.auth != null; allow write: if false; }
    match /announcements/{id} {
      allow read: if request.auth != null && resource.data.instructorId == request.auth.uid;
      allow write: if false;
    }
    match /notifications/{id} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
